{
  "name": "npm-build-tool",
  "version": "1.0.0",
  "description": "How to Use npm as a Build Tool",
  "main": "my-module.js",
  "config": {
    "dir": "src"
  },
  "scripts": {
    "publish": "echo \"Publish Complete!\"",
    "lint": "npm run lint:dir && npm run lint:dir --npm-build-tool:dir=test",
    "lint:dir": "jshint $npm_package_config_dir/**.js",
    "build": "browserify $npm_package_config_dir/my-module.js > dist/my-module.min.js",
    "test": "mocha $npm_package_config_dir/",
    "clean": "rimraf dist && mkdir dist",
    "prepublish": "npm run clean",
    "prebuild": "npm run test --npm-build-tool:dir=test",
    "pretest": "npm run lint",
    "postclean": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertocubero/npm-build-tool.git"
  },
  "author": "Alberto Cubero Navas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/albertocubero/npm-build-tool/issues"
  },
  "homepage": "https://github.com/albertocubero/npm-build-tool#readme",
  "devDependencies": {
    "browserify": "^13.0.0",
    "jshint": "^2.9.1",
    "mocha": "^2.4.5",
    "rimraf": "^2.5.2"
  }
}
