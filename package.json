{
  "name": "npm-build-tool",
  "version": "1.0.0",
  "description": "How to Use npm as a Build Tool",
  "main": "my-module.js",
  "config": {
    "dir": "src"
  },
  "scripts": {
    "publish": "npm run build:watch",
    "lint": "npm run lint:js && npm run lint:js --npm-build-tool:dir=test",
    "lint:js": "jshint $npm_package_config_dir/**.js",
    "build": "npm run build:js && npm run build:css",
    "build:watch": "parallelshell 'npm run build:js:watch' 'npm run build:css:watch'",
    "build:js": "browserify $npm_package_config_dir/my-module.js | hashmark -l 8 'dist/js/my-module.{hash}.min.js'",
    "build:js:watch": "watch 'npm run clean:js && npm run build:js' $npm_package_config_dir/",
    "build:css": "stylus -u autoprefixer-stylus -p assets/styles/styles.styl | cssmin | hashmark -l 8 'dist/css/styles.{hash}.css'",
    "build:css:watch": "watch 'npm run clean:css && npm run build:css' assets/styles/",
    "test": "mocha $npm_package_config_dir/",
    "clean": "rimraf dist && mkdir dist && mkdir dist/js && mkdir dist/css",
    "clean:js": "rimraf dist/js && mkdir dist/js",
    "clean:css": "rimraf dist/css && mkdir dist/css",
    "prepublish": "npm run clean",
    "postclean": "npm run build",
    "prebuild": "npm run test --npm-build-tool:dir=test",
    "pretest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertocubero/npm-build-tool.git"
  },
  "author": "Alberto Cubero Navas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/albertocubero/npm-build-tool/issues"
  },
  "homepage": "https://github.com/albertocubero/npm-build-tool#readme",
  "devDependencies": {
    "autoprefixer-stylus": "^0.9.2",
    "browserify": "^13.0.0",
    "cssmin": "^0.4.3",
    "hashmark": "^3.1.0",
    "jshint": "^2.9.1",
    "mocha": "^2.4.5",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.5.2",
    "stylus": "^0.54.2",
    "watch": "^0.17.1"
  }
}
