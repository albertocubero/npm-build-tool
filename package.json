{
  "name": "npm-build-tool",
  "version": "1.0.0",
  "description": "How to Use npm as a Build Tool",
  "main": "my-module.js",
  "scripts": {
    
    "lint": "npm run lint:js:src && npm run lint:js:test",
    "lint:js:src": "jshint src/**.js",
    "lint:js:test": "jshint test/**.js",
    
    "build": "npm run build:js && npm run build:css && npm run build:markup",
    "build:watch": "parallelshell 'npm run build:js:watch' 'npm run build:css:watch' 'npm run build:markup:watch'",
    "build:js": "browserify src/my-module.js > dist/js/main.js",
    "build:js:watch": "watch 'npm run clean:js && npm run build:js' src/",
    "build:css": "stylus -u autoprefixer-stylus -p assets/styles/main.styl | cssmin > dist/css/main.min.css",
    "build:css:watch": "watch 'npm run clean:css && npm run build:css' assets/styles/",
    "build:markup": "jade assets/markup/index.jade -o dist/",
    "build:markup:watch": "watch 'npm run build:markup' assets/markup/",

    "test": "mocha test/",

    "clean": "rimraf dist && mkdir dist && mkdir dist/js && mkdir dist/css",
    "clean:js": "rimraf dist/js && mkdir dist/js",
    "clean:css": "rimraf dist/css && mkdir dist/css",
    
    "prebuild:watch": "npm run clean",
    "prebuild": "npm run clean",

    "prebuild:js": "npm run test",
    "pretest": "npm run lint",

    "live-reload": "live-reload --port 9091 dist/",
    "serve": "http-server -p 9090 dist/",
    "open:prod": "opener http://example.com",
    "open:stage": "opener http://staging.example.internal",
    "open:dev": "opener http://localhost:9090",

    "dev": "npm run open:dev -s && parallelshell 'npm run live-reload' 'npm run serve' 'npm run build:watch'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertocubero/npm-build-tool.git"
  },
  "author": "Alberto Cubero Navas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/albertocubero/npm-build-tool/issues"
  },
  "homepage": "https://github.com/albertocubero/npm-build-tool#readme",
  "devDependencies": {
    "autoprefixer-stylus": "^0.9.2",
    "browserify": "^13.0.0",
    "cssmin": "^0.4.3",
    "http-server": "^0.9.0",
    "jade": "^1.11.0",
    "jshint": "^2.9.1",
    "live-reload": "^1.1.0",
    "mocha": "^2.4.5",
    "opener": "^1.4.1",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.5.2",
    "stylus": "^0.54.2",
    "watch": "^0.17.1"
  }
}
